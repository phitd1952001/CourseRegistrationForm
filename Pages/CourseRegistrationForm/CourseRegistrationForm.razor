@page "/course-registration"
<PageTitle>Course Registration Form</PageTitle>

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="row w-100 g-4" style="max-width: 1000px;">
        <div class="col-md-6">
            <div class="card shadow rounded-3">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Course Registration Form</h3>
                    <EditForm Model="user">
                        <DataAnnotationsValidator />

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label class="form-label">Full Name *</label>
                            <input type="text" class="form-control" @bind="user.FullName"
                                placeholder="Enter your full name" />
                            <ValidationMessage For="@(() => user.FullName)" />
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" class="form-control" @bind="user.Email"
                                placeholder="Enter your email" />
                            <ValidationMessage For="@(() => user.Email)" />
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label class="form-label">Phone Number *</label>
                            <input type="tel" class="form-control" @bind="user.PhoneNumber"
                                placeholder="Enter your phone" />
                            <ValidationMessage For="@(() => user.PhoneNumber)" />
                        </div>

                        <!-- Course -->
                        <div class="mb-3">
                            <label class="form-label">Select Course *</label>
                            <select class="form-select" @bind="user.Course">
                                <option disabled selected>Choose a Course...</option>
                                <option value="c">C</option>
                                <option value="cpp">C++</option>
                                <option value="csharp">C#</option>
                                <option value="html">HTML</option>
                                <option value="css">CSS</option>
                                <option value="js">JavaScript</option>
                                <option value="reactjs">ReactJS</option>
                            </select>
                            <ValidationMessage For="@(() => user.Course)" />
                        </div>

                        <!-- Study Mode -->
                        <div class="mb-3">
                            <label class="form-label">Study Mode *</label>
                            <InputRadioGroup @bind-Value="user.Study">
                                <div class="d-flex gap-3">
                                    <div class="form-check">
                                        <InputRadio class="form-check-input" Value="true" id="online" />
                                        <label for="online" class="form-check-label">Online</label>
                                    </div>
                                    <div class="form-check">
                                        <InputRadio class="form-check-input" Value="false" id="offline" />
                                        <label for="offline" class="form-check-label">Offline</label>
                                    </div>
                                </div>
                            </InputRadioGroup>
                            <ValidationMessage For="@(() => user.Study)" />
                        </div>

                        <!-- DateTime -->
                        <div class="mb-3">
                            <label class="form-label">Preferred Start Date *</label>
                            <input type="datetime-local" class="form-control" @bind="user.DateTime" />
                            <ValidationMessage For="@(() => user.DateTime)" />
                        </div>

                        <!-- Comments -->
                        <div class="mb-3">
                            <label class="form-label">Comments or Notes *</label>
                            <textarea class="form-control" rows="4" @bind="user.Comment"></textarea>
                            <ValidationMessage For="@(() => user.Comment)" />
                        </div>

                        <!-- AcceptTerms -->
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="termsRegistration" @bind="user.AcceptTerms" />
                            <label class="form-check-label" for="termsRegistration">I agree to the terms *</label>
                            <ValidationMessage For="@(() => user.AcceptTerms)" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                    </EditForm>
                </div>
            </div>
        </div>

        <!--Hiển Thị Thông Tin -->
        <div class="col-md-6">
            <div class="card shadow rounded-3">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">Entered Information</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Full Name:</strong> @user.FullName</li>
                        <li class="list-group-item"><strong>Email:</strong> @user.Email</li>
                        <li class="list-group-item"><strong>Phone:</strong> @user.PhoneNumber</li>
                        <li class="list-group-item"><strong>Course:</strong> @user.Course</li>
                        <li class="list-group-item"><strong>Study Mode:</strong> @(user.Study == true ? "Online" :
                                                        user.Study == false ? "Offline" : "")</li>
                        <li class="list-group-item"><strong>Start Date:</strong> @user.DateTime</li>
                        <li class="list-group-item"><strong>Comments:</strong> @user.Comment</li>
                        <li class="list-group-item"><strong>Accept Terms:</strong> @(user.AcceptTerms ? "Yes" : "No")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private UserRegistrationVM user = new UserRegistrationVM();

    protected override void OnInitialized()
    {
        user.DateTime = DateTime.Now;
    }
}
